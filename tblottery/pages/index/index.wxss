
.container {
  /* background: rgba(107, 113, 114, 0.15); */
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.index-banner,
.index-category,
.index-products {
  position: absolute;
  width: 100%;


}

.index-banner .slide-image {
  width: 100%;
  height: 300rpx;
}

.index-category {
  position: absolute;
  top: 310rpx;
  height: 300rpx;
  margin-bottom: 10rpx;
  box-shadow: rgba(107, 113, 114, 0.15) 0px 2px 4px 0px;
}

.index-products {
  top: 620rpx;
  /* background: lightpink; */
}

.index-products__title {
  font-size: 28rpx;
  text-align: center;
  letter-spacing: 5rpx;
  background: #FFF;
  padding: 20rpx 0;
  box-shadow: rgba(107, 113, 114, 0.15) 0px 2px 4px 0px;
  margin-bottom: 10rpx;
}

.product-list__item {
  position: relative;
  float: left;
  width: 50%;
  text-align: center;
  /* border: 1px solid red; */
  box-shadow: rgba(107, 113, 114, 0.15) 0px 2px 4px 0px;
  /* margin-bottom: 30px; */
}

.product-list__item--img {
  margin-top: 10rpx;
}

.product-list__item--discount {
  position: absolute;
  right: 20rpx;
  top: 400rpx;
  border-top-left-radius: 20rpx;
  padding: 10rpx;
  font-size: 20rpx;
  background: #FF9000;
  color: #FFF;
}

.product-list__item--title {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
}

.product-list__item--price-area {
  padding: 10rpx 0;
}
.product-list__item--price-area view {
  display: inline-block;
  font-size: 20rpx;
  margin-right: 10rpx;
}

.product-list__item--price-area .price {
  color: rgb(190, 8, 8);
  font-size: 30rpx;
}

.product-list__item--price-area .sales {
  color: rgb(190, 8, 8);
}
