/**index.wxss**/
.index {
  padding: 30rpx;
  font-size: 30rpx;
}

.top-bar {
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
}

.top-bar-title {
  font-weight: 600;
  height: 100%;
  float: left;
  width: 20%;
  font-size: 40rpx;
  font-family: medium-content-sans-serif-font,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Open Sans","Helvetica Neue",sans-serif;
}

.top-bar-searchbox {
  float: left;
  width: 60%;
}

.top-bar-searchbox image {
  width: 100%;
  height: 100%;
}

.top-bar-avatar {
  text-align: right;
  float: left;
  width: 20%;
}

.top-bar-avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.article-list {
  min-height: 800rpx;
}

.article-item {
  border: 1px solid rgba(0,0,0,.1);
  margin: 40rpx 0;
}

.article-item-cover image {
  width: 100%;
}

.article-item-detail {
  padding: 20rpx;
}

.article-item-title {
  font-weight: 600;
  font-size: 42rpx;
}

.book-btn {
  display: block;
  background: #CCC;
  border: none;
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  font-size: 20rpx;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  font-weight: 500;
  line-height: 40rpx;
  /* line-height: 10rpx; */
}

.vip {
  display: block;
  background: #CCC;
  border: none;
  text-align: center;
  line-height: 50rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  font-size: 20rpx;
  position: fixed;
  bottom: 160rpx;
  right: 20rpx;
  font-weight: 500;
}



